<%- include('partials/header', { title, description, canonical, currentPath }) %>

<main id="main" class="content-page">

<h2>Contact Us</h2>
<p class="subtitle">Have a question or need help? Send us a message.</p>

<% if (typeof success !== 'undefined' && success) { %>
  <div class="msg success">
    <p><strong>Message sent.</strong> We will get back to you as soon as possible.</p>
  </div>
<% } else { %>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="msg error"><%= error %></div>
  <% } %>

  <form action="/contact" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <section class="form-section">
      <span class="section-label">Your Message</span>
      <span class="encrypted-label"><svg class="icon" aria-hidden="true"><use href="#icon-lock"/></svg> Encrypted</span>

      <label for="contact_name">Name</label>
      <input type="text" id="contact_name" name="name" value="<%= (typeof formData !== 'undefined' && formData.name) ? formData.name : '' %>" required>

      <label for="contact_email">Email</label>
      <input type="email" id="contact_email" name="email" value="<%= (typeof formData !== 'undefined' && formData.email) ? formData.email : '' %>" required>

      <label for="contact_subject">Subject (optional)</label>
      <input type="text" id="contact_subject" name="subject" value="<%= (typeof formData !== 'undefined' && formData.subject) ? formData.subject : '' %>">

      <label for="contact_message">Message</label>
      <textarea id="contact_message" name="message" required><%= (typeof formData !== 'undefined' && formData.message) ? formData.message : '' %></textarea>
    </section>

    <button type="submit">Send Message</button>
  </form>

<% } %>

<hr>

<p>You can also reach us by email at <strong><%= typeof process !== 'undefined' && process.env.OWNER_EMAIL ? process.env.OWNER_EMAIL : 'support@certifiedmailsender.com' %></strong>.</p>

<%- include('partials/footer') %>
